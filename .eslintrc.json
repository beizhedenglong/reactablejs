{
  "extends": ["airbnb"],
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
      "semi": ["error", "never"],
      "react/jsx-filename-extension": "off",
      "no-return-assign": "off",
      "react/sort-comp": "off",
      "react/require-default-props": "warn",
      "jsx-a11y/no-static-element-interactions": "off"
  }
}